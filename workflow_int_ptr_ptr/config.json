{
  "output_dir": "${root_dir}/outputs",
  "data_dir": "${root_dir}/data",
  "specfem": {
    "root": "${root_dir}/..",
    "reference": {
      "dir": "${root_dir}/reference",
      "repo_remote": "https://github.com/int-ptr-ptr/SPECFEMPP/archive/d4fe2fd3cec2c54800fb42eac51b3d8fb99f353d.zip",
      "remote_download_local_filename": "${dir}/specfem_reference.zip",
      "local_repo_dir": "${dir}/repo",
      "build_dir": "${dir}/build",
      "exe": "${build_dir}/specfem2d_eventmarcher",
      "meshfem": "${build_dir}/xmeshfem2D",
      "cmake_build_options": "-DKokkos_ENABLE_SERIAL=ON -DCMAKE_BUILD_TYPE=Release -DVTK_CXX_BUILD=OFF"
    },
    "live":{
      "build": "${specfem.root}/build",
      "exe": "${specfem.live.build}/bin/specfem2d_eventmarcher",
      "meshfem": "${build}/bin/xmeshfem2D",
      "cg_exe": "${specfem.live.build}/bin/specfem2d",
      "cmake_build_options": "-DKokkos_ENABLE_SERIAL=ON -DCMAKE_BUILD_TYPE=Debug -DVTK_CXX_BUILD=OFF"
    }
  },
  "tests": [
    {
      "name": "acoustic-elastic-conforming",
      "prov_dir": "${data_dir}/conforming/provenance_acoustic_elastic",
      "workspace": "${data_dir}/conforming/workspace_acoustic_elastic",
      "config": {
        "meshfem_parfile": "${root_dir}/run_configs/PAR_FILE_acoustic_elastic",
        "specfem_parfile": "${root_dir}/run_configs/specfem_config.yaml",
        "source": "${root_dir}/run_configs/source_config.yaml",
        "topography": "${root_dir}/run_configs/topography_twolayer.dat"
      }
    },
    {
      "name": "acoustic-acoustic-conforming",
      "prov_dir": "${data_dir}/conforming/provenance_acoustic_acoustic",
      "workspace": "${data_dir}/conforming/workspace_acoustic_acoustic",
      "config": {
        "meshfem_parfile": "${root_dir}/run_configs/PAR_FILE_acoustic_acoustic",
        "specfem_parfile": "${root_dir}/run_configs/specfem_config.yaml",
        "source": "${root_dir}/run_configs/source_config.yaml",
        "topography": "${root_dir}/run_configs/topography_twolayer.dat"
      }
    }
  ],
  "cg_compare":{
    "config_files": {
      "dir":"${root_dir}/runnables/cg_compare",
      "meshfem_parfile": "${dir}/PAR_FILE",
      "meshfem_parfile_hires": "${dir}/PAR_FILE_hires",
      "meshfem_parfile_bottom": "${dir}/PAR_FILE_DOUBLE1",
      "meshfem_parfile_top": "${dir}/PAR_FILE_DOUBLE2",
      "specfem_parfile": "${dir}/specfem_config.yaml",
      "specfem_parfile_double": "${dir}/specfem_config_double.yaml",
      "specfem_parfile_subdivs": "${dir}/specfem_config_subdiv.yaml",
      "source": "${dir}/source_config.yaml",
      "topography": "${dir}/topography_file.dat",
      "topography_hires": "${dir}/topography_file_hires.dat",
      "topography_bottom": "${dir}/topo_bot.dat",
      "topography_top": "${dir}/topo_top.dat"
    },
    "workspace_folder":"${data_dir}/cg_compare",
    "output_folder": "${output_dir}/cg_compare",
    "dump_test_resolution":"50",
    "dt": "0.001",
    "maxsteps": "5000",
    "workspace_files": {
      "meshfem_parfile": "PAR_FILE",
      "meshfem_parfile_bottom": "PAR_FILE_DOUBLE1",
      "meshfem_parfile_top": "PAR_FILE_DOUBLE2",
      "specfem_parfile": "specfem_config.yaml",
      "specfem_parfile_double": "specfem_config_double.yaml",
      "specfem_parfile_subdivs": "specfem_config_subdiv.yaml",
      "meshfem_stations_out": "mesh_stations",
      "source": "source_config.yaml",
      "topography": "topography_file.dat",
      "topography_bottom": "topo_bot.dat",
      "topography_top": "topo_top.dat",
      "dump_prefix": "dump/simfield/d",
      "seismo_folder_name": "seismo",
      "out_seismo": "specfem_out/${seismo_folder_name}",
      "provenance_fol": "provenance",
      "provenance_dump": "${provenance_fol}/dump.dat",
      "provenance_seismo": "${provenance_fol}/${seismo_folder_name}",
      "analysis": {
        "folder": "analysis",
        "tmp": "${folder}/tmp",
        "animation_framerate": "5"
      }
    },
    "outputs":{
      "seismo": "seismo_compare.png",
      "animation_out": "disp_compare.mp4"
    },
    "tests": [
      {
        "name": "FF0",
        "mat1": "1 1 1 0 0 0 9999 9999 0 0 0 0 0 0",
        "mat2": "1 1 1 0 0 0 9999 9999 0 0 0 0 0 0",
        "class": "samemesh"
      },
      {
        "name": "FS0",
        "mat1": "1 1 1 0.6 0 0 9999 9999 0 0 0 0 0 0",
        "mat2": "1 1 1 0 0 0 9999 9999 0 0 0 0 0 0",
        "class": "samemesh"
      },
      {
        "name": "FF1",
        "mat1": "1 1 1.5 0 0 0 9999 9999 0 0 0 0 0 0",
        "mat2": "1 1 1 0 0 0 9999 9999 0 0 0 0 0 0",
        "class": "subdivmesh"
      },
      {
        "name": "FS1",
        "mat1": "1 1 1.5 0.6 0 0 9999 9999 0 0 0 0 0 0",
        "mat2": "1 1 1 0 0 0 9999 9999 0 0 0 0 0 0",
        "class": "subdivmesh"
      }
    ]
  }
}
