{
  "specfem": {
    "root": "${root_dir}/..",
    "reference": {
      "dir": "${root_dir}/reference",
      "repo_remote": "https://github.com/int-ptr-ptr/SPECFEMPP/archive/d4fe2fd3cec2c54800fb42eac51b3d8fb99f353d.zip",
      "remote_download_local_filename": "${specfem.reference.dir}/specfem_reference.zip",
      "local_repo_dir": "${specfem.reference.dir}/repo",
      "build_dir": "${specfem.reference.dir}/build",
      "exe": "${specfem.reference.build_dir}/specfem2d_eventmarcher",
      "meshfem": "${specfem.reference.build_dir}/xmeshfem2D",
      "cmake_build_options": "-DKokkos_ENABLE_SERIAL=ON -DCMAKE_BUILD_TYPE=Release -DVTK_CXX_BUILD=OFF"
    },
    "live":{
      "build": "${specfem.root}/build",
      "exe": "${specfem.live.build}/specfem2d_eventmarcher",
      "cg_exe": "${specfem.live.build}/specfem2d",
      "cmake_build_options": "-DKokkos_ENABLE_SERIAL=ON -DCMAKE_BUILD_TYPE=Debug -DVTK_CXX_BUILD=OFF"
    }
  },
  "tests": [
    {
      "name": "acoustic-elastic-conforming",
      "prov_dir": "${root_dir}/data/conforming/provenance_acoustic_elastic",
      "workspace": "${root_dir}/data/conforming/workspace_acoustic_elastic",
      "config": {
        "meshfem_parfile": "${root_dir}/run_configs/PAR_FILE_acoustic_elastic",
        "specfem_parfile": "${root_dir}/run_configs/specfem_config.yaml",
        "source": "${root_dir}/run_configs/source_config.yaml",
        "topography": "${root_dir}/run_configs/topography_twolayer.dat"
      }
    },
    {
      "name": "acoustic-acoustic-conforming",
      "prov_dir": "${root_dir}/data/conforming/provenance_acoustic_acoustic",
      "workspace": "${root_dir}/data/conforming/workspace_acoustic_acoustic",
      "config": {
        "meshfem_parfile": "${root_dir}/run_configs/PAR_FILE_acoustic_acoustic",
        "specfem_parfile": "${root_dir}/run_configs/specfem_config.yaml",
        "source": "${root_dir}/run_configs/source_config.yaml",
        "topography": "${root_dir}/run_configs/topography_twolayer.dat"
      }
    }
  ],
  "cg_compare":{
    "config_files": {
      "dir":"${root_dir}/runnables/cg_compare",
      "meshfem_parfile": "${cg_compare.config_files.dir}/PAR_FILE",
      "meshfem_parfile_bottom": "${cg_compare.config_files.dir}/PAR_FILE_DOUBLE1",
      "meshfem_parfile_top": "${cg_compare.config_files.dir}/PAR_FILE_DOUBLE2",
      "specfem_parfile": "${cg_compare.config_files.dir}/specfem_config.yaml",
      "specfem_parfile_double": "${cg_compare.config_files.dir}/specfem_config_double.yaml",
      "source": "${cg_compare.config_files.dir}/source_config.yaml",
      "topography": "${cg_compare.config_files.dir}/topography_file.dat",
      "topography_bottom": "${cg_compare.config_files.dir}/topo_bot.dat",
      "topography_top": "${cg_compare.config_files.dir}/topo_top.dat"
    },
    "workspace_folder":"${root_dir}/data/cg_compare",
    "dump_test_resolution":"50",
    "workspace_files": {
      "meshfem_parfile": "PAR_FILE",
      "meshfem_parfile_bottom": "PAR_FILE_DOUBLE1",
      "meshfem_parfile_top": "PAR_FILE_DOUBLE2",
      "specfem_parfile": "specfem_config.yaml",
      "specfem_parfile_double": "specfem_config_double.yaml",
      "meshfem_stations_out": "mesh_stations",
      "source": "source_config.yaml",
      "topography": "topography_file.dat",
      "topography_bottom": "topo_bot.dat",
      "topography_top": "topo_top.dat",
      "dump_prefix": "dump/simfield/d",
      "seismo_folder_name": "seismo",
      "out_seismo": "specfem_out/${cg_compare.workspace_files.seismo_folder_name}",
      "provenance_fol": "provenance",
      "provenance_dump": "${cg_compare.workspace_files.provenance_fol}/dump.dat",
      "provenance_seismo": "${cg_compare.workspace_files.provenance_fol}/${cg_compare.workspace_files.seismo_folder_name}"
    },
    "tests": [
      {
        "name": "FF1",
        "mat1": "1 1 1.5 0 0 0 9999 9999 0 0 0 0 0 0",
        "mat2": "1 1 1 0 0 0 9999 9999 0 0 0 0 0 0",
        "class": "doublemesh"
      },
      {
        "name": "FS1",
        "mat1": "1 1 1.5 0.6 0 0 9999 9999 0 0 0 0 0 0",
        "mat2": "1 1 1 0 0 0 9999 9999 0 0 0 0 0 0",
        "class": "doublemesh"
      }
    ]
  }
}
