{
  "tasks": [
    {
      "type": "mesher",
      "parfile": "Par_File",
      "id": "mesher_hires",
      "deps":[]
    },
    {
      "type": "mesher",
      "parfile": "Par_File_half",
      "id": "mesher_halfres",
      "deps":[]
    },
    {
      "type": "mesher",
      "parfile": "Par_File_quarter",
      "id": "mesher_quarterres",
      "deps":[]
    },
    {
      "type": "specfem2d",
      "parfile": "specfem_config.yaml",
      "id": "sfcg",
      "deps":["mesher_hires"]
    },
    {
      "type": "specfemem",
      "parfile": "specfem_config_dg.yaml",
      "id": "sfdg1",
      "deps":["mesher_halfres","sfcg"],
      "args": "-d 100000 -D OUTPUT_FILES/dumps_dg"
    },
    {
      "type": "specfemem",
      "parfile": "specfem_config_dumpget.yaml",
      "id": "sfdg2",
      "deps":["mesher_hires","sfcg"],
      "args": "-d 100000 -D OUTPUT_FILES/dumps_cg"
    },
    {
      "type": "script",
      "command": "python plot.py",
      "deps":["sfcg","sfdg1"],
      "files_in": ["OUTPUT_FILES/seismo","OUTPUT_FILES/seismo_dg","plot.py"]
    },
    {
      "type": "script",
      "command": "python domains.py",
      "deps":["sfdg2","sfdg1"],
      "files_in": ["OUTPUT_FILES/dumps_cg","OUTPUT_FILES/dumps_dg"],
      "files_out": ["OUTPUT_FILES/dof.txt"]
    }
  ]
}
